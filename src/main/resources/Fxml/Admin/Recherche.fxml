            <graphic>
               <FontAwesomeIconView fill="WHITE" glyphName="SEARCH" size="20" />
            </graphic>
         </Button>
      </HBox>
      <ListView fx:id="result_listview" prefHeight="200.0" prefWidth="720.0" styleClass="search_box" />
   </VBox>
</AnchorPane>
